
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm())
{
    <table>
        <tr>
            <td>
                <label for="departmentId">Select Department : </label>
            </td>
            <td>
                <select id="departmentId" name="departmentId">
                    <option value="">--select--</option>\
                    @foreach (var department in ViewBag.Departments)
                    {
                        <option value="@department.Id">@department.Name</option>
                    }
                </select>
            </td>
        </tr>
        <tr>
            <td>
                <label for="studentId">Select Student : </label>
            </td>
            <td>
                <select id="studentId" name="studentId">
                    <option value="">--select--</option>\
                </select>
            </td>
        </tr>
        <tr>
            <td><label for="studentName">Student Name : </label></td>
            <td><input type="text" id="studentName" name="studentName" disabled/></td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="Submit"/>
            </td>
        </tr>
    </table>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <td>Student Id</td>
                <td>Student Name</td>
                <td>Department Id</td>
            </tr>
        </thead>
        <tbody id="studentTableBody"></tbody>
    </table>
}



@section scripts
{
    <script>
        $(document).ready(function () {
            $("#departmentId").change(function () {
                var deptId = $("#departmentId").val();
                $("#studentId").empty();
                $("#studentId").append('<option value="">--select--</option>');
                $("#studentName").val("");
                $("#studentTableBody").empty();
                var json = { departmentId: deptId };
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("GetStudentsByDepartmentId", "Department")',
                    //url: '/Department/GetStudentsByDepartmentId',
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify(json),
                    success: function (data) {
                        $.each(data, function (key, value) {
                            $("#studentId").append('<option value=' + value.Id + '>' + value.Name + '</option>');
                            $("#studentTableBody").append('<tr><td>' + value.Id + '</td><td>' + value.Name + '</td><td>' + value.DepartmentId + '</td></tr>')
                        });
                    }
                });
            });

            $("#studentId").change(function () {
                var studentId = $("#studentId").val();
                var json = { id: studentId };
                $.ajax({
                    type: "POST",
                    url: '/Department/GetStudentById',
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify(json),
                    success: function (data) {
                        $("#studentName").val(data.Name);
                    }
                });
            });
        });
    </script>
}